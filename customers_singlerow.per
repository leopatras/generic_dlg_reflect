  ITEM firstrow
  ITEM prevrow
  ITEM nextrow
  ITEM lastrow
  SEPARATOR
  ITEM append(IMAGE="fa-plus")
  ITEM update(IMAGE="fa-edit")
  ITEM delete(IMAGE="fa-trash-o")
